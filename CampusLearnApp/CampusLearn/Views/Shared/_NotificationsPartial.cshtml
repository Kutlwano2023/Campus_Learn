@* Notifications partial: bell icon, badge and dropdown *@
<div id="notification-root" style="position:relative;">
    <button id="notification-btn" class="btn btn-link text-dark p-0" aria-expanded="false" aria-haspopup="true" title="Notifications" style="position:relative;">
        <!-- Bell icon -->
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M15 17H9a3 3 0 006 0z" fill="#2E6DFF" />
            <path d="M18 8a6 6 0 10-12 0v5l-1.5 1.5V16h16v-1.5L18 13V8z" stroke="#2E6DFF" stroke-width="1" fill="none" />
        </svg>

        <span id="notification-count" class="badge bg-danger rounded-pill" style="position:absolute; top:-6px; right:-4px; display:none; font-size:10px; padding:2px 6px;">
            0
        </span>
    </button>

    <div id="notification-dropdown" class="card shadow-sm" style="width:320px; display:none; position:absolute; right:0; top:36px; z-index:1050;">
        <div class="card-header d-flex justify-content-between align-items-center">
            <strong>Notifications</strong>
            <small id="notification-lastupdated" class="text-muted">Updating...</small>
        </div>
        <div id="notification-list" class="list-group list-group-flush" style="max-height:350px; overflow:auto;">
            <div class="list-group-item">Loading...</div>
        </div>
        <div class="card-footer text-center">
            <a href="/Notifications/All" class="small">View all notifications</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/notifications.js"></script>
}