@{
    ViewData["Title"] = "Tutor Portal";
}

<div class="container-fluid">
    <!-- Welcome Header -->
    <div class="row mb-6">
        <div class="col-12">
            <div class="bg-gradient-to-r from-purple-600 to-blue-600 rounded-xl p-6 text-white shadow-lg">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-3xl font-bold mb-2">Welcome to Tutor Portal</h1>
                        <p class="text-purple-100">Manage your students, sessions, and teaching materials in one place</p>
                    </div>
                    <div class="text-right">
                        <div class="text-2xl font-bold">@DateTime.Now.ToString("dddd, MMMM dd")</div>
                        <div class="text-purple-100">Ready to teach!</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-6">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-blue-100 text-blue-600 mr-4">
                        <i class="fas fa-users text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-600">Total Students</p>
                        <h3 class="text-2xl font-bold text-gray-900">24</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-green-100 text-green-600 mr-4">
                        <i class="fas fa-calendar-check text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-600">Sessions Today</p>
                        <h3 class="text-2xl font-bold text-gray-900">5</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-orange-100 text-orange-600 mr-4">
                        <i class="fas fa-tasks text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-600">Pending Assignments</p>
                        <h3 class="text-2xl font-bold text-gray-900">12</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-purple-100 text-purple-600 mr-4">
                        <i class="fas fa-chart-line text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-600">Avg. Performance</p>
                        <h3 class="text-2xl font-bold text-gray-900">84%</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-6">
        <div class="col-12">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Quick Actions</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <a asp-controller="Tutor" asp-action="SessionManagement"
                       class="flex items-center p-4 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors">
                        <i class="fas fa-calendar-plus text-blue-600 text-xl mr-3"></i>
                        <span class="font-medium text-gray-900">Schedule Session</span>
                    </a>
                    <a asp-controller="Tutor" asp-action="AssignmentManagement"
                       class="flex items-center p-4 bg-green-50 rounded-lg hover:bg-green-100 transition-colors">
                        <i class="fas fa-tasks text-green-600 text-xl mr-3"></i>
                        <span class="font-medium text-gray-900">Create Assignment</span>
                    </a>
                    <a asp-controller="Tutor" asp-action="MyStudents"
                       class="flex items-center p-4 bg-purple-50 rounded-lg hover:bg-purple-100 transition-colors">
                        <i class="fas fa-users text-purple-600 text-xl mr-3"></i>
                        <span class="font-medium text-gray-900">View Students</span>
                    </a>
                    <a asp-controller="Tutor" asp-action="ResourceManagement"
                       class="flex items-center p-4 bg-orange-50 rounded-lg hover:bg-orange-100 transition-colors">
                        <i class="fas fa-folder-plus text-orange-600 text-xl mr-3"></i>
                        <span class="font-medium text-gray-900">Add Resources</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity & Upcoming Sessions -->
    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Recent Activity</h2>
                <div class="space-y-4">
                    <div class="flex items-start p-3 bg-blue-50 rounded-lg">
                        <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                        <div>
                            <p class="font-medium">Assignment graded</p>
                            <p class="text-sm text-gray-600">React Fundamentals - 15 submissions graded</p>
                            <p class="text-xs text-gray-500">2 hours ago</p>
                        </div>
                    </div>
                    <div class="flex items-start p-3 bg-purple-50 rounded-lg">
                        <i class="fas fa-comment mt-1 mr-3 text-purple-500"></i>
                        <div>
                            <p class="font-medium">New message from student</p>
                            <p class="text-sm text-gray-600">Sarah Chen asked about tomorrow's session</p>
                            <p class="text-xs text-gray-500">1 hour ago</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Today's Sessions</h2>
                <div class="space-y-3">
                    <div class="p-3 bg-green-50 rounded-lg border-l-4 border-green-500">
                        <p class="font-medium">React Advanced Concepts</p>
                        <p class="text-sm text-gray-600">10:00 AM - 11:30 AM</p>
                        <p class="text-xs text-gray-500">With 8 students</p>
                    </div>
                    <div class="p-3 bg-blue-50 rounded-lg border-l-4 border-blue-500">
                        <p class="font-medium">JavaScript Workshop</p>
                        <p class="text-sm text-gray-600">2:00 PM - 3:30 PM</p>
                        <p class="text-xs text-gray-500">With 12 students</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
    </style>
}