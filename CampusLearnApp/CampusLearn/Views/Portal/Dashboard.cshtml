@using Microsoft.AspNetCore.Identity
@inject UserManager<Users> UserManager

@{
    ViewData["Title"] = "Dashboard Overview";
    Layout = "_Layout";

    // Get the current user and their full name
    var user = await UserManager.GetUserAsync(User);
    var fullName = user?.FullName ?? "User";
    var role = ViewBag.Role ?? "Student";
}

<partial name="_PortalNavigation" />
<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h2 mb-1">Dashboard Overview</h1>
                            <p class="text-muted mb-0">Welcome back, @fullName! Here's your learning progress.</p>
                        </div>
                        <div class="alert alert-success mb-0">
                            <strong>Hello, @fullName!</strong> You are logged in as a <strong>@role</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Left Column - Main Content -->
        <div class="col-lg-8">
            <!-- Upcoming Sessions Card -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>Upcoming Sessions
                    </h3>
                    <a asp-controller="Portal" asp-action="ScheduleSession" class="btn btn-sm btn-light">
                        View Calendar
                    </a>
                </div>
                <div class="card-body">
                    <!-- Session 1 -->
                    <div class="session-item border-bottom pb-3 mb-3">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <div class="d-flex align-items-center">
                                    <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                        AJ
                                    </div>
                                    <div>
                                        <h5 class="mb-1">Alice Johnson</h5>
                                        <p class="text-muted mb-1">
                                            <i class="fas fa-book me-1"></i>JavaScript • 1 Hour
                                        </p>
                                        <small class="text-muted">
                                            <i class="fas fa-video me-1"></i>Video Call
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 text-md-end">
                                <div class="mb-2">
                                    <span class="badge bg-warning text-dark">Today, 2:00 PM</span>
                                </div>
                                <button class="btn btn-primary btn-sm join-btn">
                                    <i class="fas fa-video me-1"></i>Join Session
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Session 2 -->
                    <div class="session-item border-bottom pb-3 mb-3">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <div class="d-flex align-items-center">
                                    <div class="avatar bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                        BS
                                    </div>
                                    <div>
                                        <h5 class="mb-1">Bob Smith</h5>
                                        <p class="text-muted mb-1">
                                            <i class="fas fa-book me-1"></i>React • 1.5 hours
                                        </p>
                                        <small class="text-muted">
                                            <i class="fas fa-user me-1"></i>In Person
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 text-md-end">
                                <div class="mb-2">
                                    <span class="badge bg-info">Tomorrow, 10:00 AM</span>
                                </div>
                                <button class="btn btn-primary btn-sm join-btn">
                                    <i class="fas fa-video me-1"></i>Join Session
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Session 3 -->
                    <div class="session-item">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <div class="d-flex align-items-center">
                                    <div class="avatar bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                        CD
                                    </div>
                                    <div>
                                        <h5 class="mb-1">Carol Davis</h5>
                                        <p class="text-muted mb-1">
                                            <i class="fas fa-book me-1"></i>Python • 1 Hour
                                        </p>
                                        <small class="text-muted">
                                            <i class="fas fa-video me-1"></i>Video Call
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 text-md-end">
                                <div class="mb-2">
                                    <span class="badge bg-secondary">Wed, 3:00 PM</span>
                                </div>
                                <button class="btn btn-primary btn-sm join-btn">
                                    <i class="fas fa-video me-1"></i>Join Session
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity Card -->
            <div class="card">
                <div class="card-header">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-history me-2"></i>Recent Activity
                    </h3>
                </div>
                <div class="card-body">
                    <p class="text-muted">Latest interactions and updates</p>

                    <div class="activity-list">
                        <div class="activity-item d-flex align-items-center border-bottom pb-3 mb-3">
                            <div class="activity-icon bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                <i class="fas fa-share-alt"></i>
                            </div>
                            <div class="flex-grow-1">
                                <strong>@(role == "Tutor" ? "New assignment submitted" : "Sarah shared notes on 'React Hooks'")</strong>
                                <div class="text-muted small">2 hours ago</div>
                            </div>
                        </div>

                        <div class="activity-item d-flex align-items-center">
                            <div class="activity-icon bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                <i class="fas fa-question-circle"></i>
                            </div>
                            <div class="flex-grow-1">
                                <strong>@(role == "Tutor" ? "Student question in forum" : "Quiz results available")</strong>
                                <div class="text-muted small">5 hours ago</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Sidebar -->
        <div class="col-lg-4">
            <!-- Today's Schedule Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-clock me-2"></i>Today's Schedule
                    </h3>
                </div>
                <div class="card-body">
                    <div class="schedule-grid">
                        <div class="time-slot text-center p-3 border rounded mb-2 bg-light">
                            <div class="fw-bold">2:00 PM</div>
                            <small class="text-muted">Session</small>
                        </div>
                        <div class="time-slot text-center p-3 border rounded mb-2 bg-light">
                            <div class="fw-bold">3:30 PM</div>
                            <small class="text-muted">Session</small>
                        </div>
                        <div class="time-slot text-center p-3 border rounded mb-2 bg-warning bg-opacity-25">
                            <div class="fw-bold">1:00 PM</div>
                            <small class="text-muted">Study Group</small>
                        </div>
                        <div class="time-slot text-center p-3 border rounded bg-info bg-opacity-25">
                            <div class="fw-bold">4:30 PM</div>
                            <small class="text-muted">Office Hours</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="h5 mb-0">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a asp-controller="Portal" asp-action="ScheduleSession" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-calendar-plus text-primary me-3"></i>
                            <div>
                                <div class="fw-bold">Schedule Session</div>
                                <small class="text-muted">Book a new tutoring session</small>
                            </div>
                        </a>
                        <a asp-controller="Portal" asp-action="Resources" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-book text-success me-3"></i>
                            <div>
                                <div class="fw-bold">Learning Resources</div>
                                <small class="text-muted">Access study materials</small>
                            </div>
                        </a>
                        <a href="#" id="openMessagesQuickAction" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-comments text-info me-3"></i>
                            <div>
                                <div class="fw-bold">Messages</div>
                                <small class="text-muted">Check new messages</small>
                            </div>
                        </a>
                        <a asp-controller="Portal" asp-action="Assignments" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-file-alt text-warning me-3"></i>
                            <div>
                                <div class="fw-bold">Assignments</div>
                                <small class="text-muted">View pending work</small>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="row g-3">
                <!-- Active Courses Card -->
                <div class="col-sm-6 col-lg-12">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="fas fa-graduation-cap fa-2x text-primary mb-3"></i>
                            <h3 class="card-title">@(role == "Tutor" ? "8" : "5")</h3>
                            <h6 class="card-subtitle mb-2 text-muted">Active Courses</h6>
                            <small class="text-muted">@(role == "Tutor" ? "Teaching" : "Enrolled") courses</small>
                        </div>
                    </div>
                </div>

                <!-- Progress Card -->
                <div class="col-sm-6 col-lg-12">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Current Progress</h5>
                            <p class="text-muted small">Your active learning paths</p>

                            <div class="progress-item">
                                <div class="d-flex justify-content-between mb-1">
                                    <strong class="small">@(role == "Tutor" ? "Student Performance" : "React Fundamentals")</strong>
                                    <span class="small">75%</span>
                                </div>
                                <div class="progress mb-3" style="height: 8px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Join session button functionality
            const joinButtons = document.querySelectorAll('.join-btn');
            joinButtons.forEach(button => {
                button.addEventListener('click', function() {
                    alert('Joining session... This would connect to the video call in a real application.');
                });
            });

            // Quick action for messages
            const openMessagesQuickAction = document.getElementById('openMessagesQuickAction');
            if (openMessagesQuickAction) {
                openMessagesQuickAction.addEventListener('click', function(e) {
                    e.preventDefault();
                    const messageWidgetBtn = document.getElementById('messageWidgetBtn');
                    if (messageWidgetBtn) {
                        messageWidgetBtn.click();
                    }
                });
            }
        });
    </script>
}