@{
    ViewData["Title"] = "Student Portal";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/studentportal.css" asp-append-version="true" />

<div class="student-portal-container">
    <!-- Header Section -->
    <div class="portal-header">
        <div class="header-content">
            <div class="header-text">
                <h1 class="portal-title">Student Portal</h1>
                <p class="portal-subtitle">Manage your learning journey and connect with peers</p>
            </div>
            <div class="header-stats">
                <div class="stat-item">
                    <div class="stat-value">85%</div>
                    <div class="stat-label">Avg. Progress</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">18/25</div>
                    <div class="stat-label">Courses</div>
                </div>
            </div>
        </div>

        <!-- Navigation Tabs -->
        <nav class="portal-tabs">
            <button class="tab-btn active" data-tab="learning">
                <i class="fas fa-book-open me-2"></i>
                Learning Materials
            </button>
            <button class="tab-btn" data-tab="assessments">
                <i class="fas fa-chart-line me-2"></i>
                Assessment Progress
            </button>
            <button class="tab-btn" data-tab="groups">
                <i class="fas fa-users me-2"></i>
                Study Groups
            </button>
            <button class="tab-btn" data-tab="peer">
                <i class="fas fa-handshake me-2"></i>
                Peer Learning
            </button>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="portal-content">
        <!-- Learning Materials Tab -->
        <section id="learning" class="tab-content active">
            <!-- Frontend Development Section -->
            <div class="section-card">
                <div class="section-header">
                    <div class="section-title">
                        <div class="title-icon bg-blue-100 text-blue-600">
                            <i class="fas fa-code"></i>
                        </div>
                        <div>
                            <h2>Frontend Development</h2>
                            <p class="section-description">Master modern web development technologies</p>
                        </div>
                    </div>
                </div>

                <div class="courses-grid">
                    <!-- React Course -->
                    <div class="course-card">
                        <div class="course-header">
                            <h3>React Fundamentals</h3>
                            <span class="course-badge badge-primary">Course</span>
                        </div>
                        <div class="course-rating">
                            <i class="fas fa-star text-yellow-400"></i>
                            <span>4.5</span>
                            <span class="rating-count">(23 reviews)</span>
                        </div>
                        <div class="progress-section">
                            <div class="progress-info">
                                <span>Progress</span>
                                <span>75%</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: 75%"></div>
                            </div>
                        </div>
                        <div class="course-meta">
                            <span><i class="fas fa-clock me-1"></i>4h remaining</span>
                        </div>
                        <div class="course-actions">
                            <button class="btn btn-outline" data-course-id="1">
                                <i class="fas fa-star me-1"></i>Reviews
                            </button>
                            <button class="btn btn-primary" data-course-id="1">
                                <i class="fas fa-play me-1"></i>Continue
                            </button>
                        </div>
                    </div>

                    <!-- JavaScript Course -->
                    <div class="course-card">
                        <div class="course-header">
                            <h3>JavaScript ES6+</h3>
                            <span class="course-badge badge-secondary">Tutorial</span>
                        </div>
                        <div class="course-rating">
                            <i class="fas fa-star text-yellow-400"></i>
                            <span>4.8</span>
                            <span class="rating-count">(45 reviews)</span>
                        </div>
                        <div class="progress-section">
                            <div class="progress-info">
                                <span>Progress</span>
                                <span>100%</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill bg-green-500" style="width: 100%"></div>
                            </div>
                        </div>
                        <div class="course-meta">
                            <span><i class="fas fa-check-circle text-green-500 me-1"></i>Completed</span>
                        </div>
                        <div class="course-actions">
                            <button class="btn btn-outline" data-course-id="2">
                                <i class="fas fa-star me-1"></i>Reviews
                            </button>
                            <button class="btn btn-primary" data-course-id="2">
                                <i class="fas fa-redo me-1"></i>Retake
                            </button>
                        </div>
                    </div>

                    <!-- CSS Course -->
                    <div class="course-card">
                        <div class="course-header">
                            <h3>CSS Grid & Flexbox</h3>
                            <span class="course-badge badge-primary">Course</span>
                        </div>
                        <div class="course-rating">
                            <i class="fas fa-star text-yellow-400"></i>
                            <span>4.6</span>
                            <span class="rating-count">(31 reviews)</span>
                        </div>
                        <div class="progress-section">
                            <div class="progress-info">
                                <span>Progress</span>
                                <span>90%</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: 90%"></div>
                            </div>
                        </div>
                        <div class="course-meta">
                            <span><i class="fas fa-clock me-1"></i>1h remaining</span>
                        </div>
                        <div class="course-actions">
                            <button class="btn btn-outline" data-course-id="3">
                                <i class="fas fa-star me-1"></i>Reviews
                            </button>
                            <button class="btn btn-primary" data-course-id="3">
                                <i class="fas fa-play me-1"></i>Continue
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Backend Development Section -->
            <div class="section-card">
                <div class="section-header">
                    <div class="section-title">
                        <div class="title-icon bg-green-100 text-green-600">
                            <i class="fas fa-server"></i>
                        </div>
                        <div>
                            <h2>Backend Development</h2>
                            <p class="section-description">Server-side programming and database management</p>
                        </div>
                    </div>
                </div>

                <div class="courses-grid">
                    <!-- Database Course -->
                    <div class="course-card">
                        <div class="course-header">
                            <h3>Database Design</h3>
                            <span class="course-badge badge-accent">Workshop</span>
                        </div>
                        <div class="course-rating">
                            <i class="fas fa-star text-yellow-400"></i>
                            <span>4.3</span>
                            <span class="rating-count">(18 reviews)</span>
                        </div>
                        <div class="progress-section">
                            <div class="progress-info">
                                <span>Progress</span>
                                <span>45%</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: 45%"></div>
                            </div>
                        </div>
                        <div class="course-meta">
                            <span><i class="fas fa-clock me-1"></i>6h remaining</span>
                        </div>
                        <div class="course-actions">
                            <button class="btn btn-outline" data-course-id="4">
                                <i class="fas fa-star me-1"></i>Reviews
                            </button>
                            <button class="btn btn-primary" data-course-id="4">
                                <i class="fas fa-play me-1"></i>Continue
                            </button>
                        </div>
                    </div>

                    <!-- Node.js Course -->
                    <div class="course-card">
                        <div class="course-header">
                            <h3>Node.js API Development</h3>
                            <span class="course-badge badge-primary">Course</span>
                        </div>
                        <div class="course-rating">
                            <i class="fas fa-star text-yellow-400"></i>
                            <span>4.7</span>
                            <span class="rating-count">(29 reviews)</span>
                        </div>
                        <div class="progress-section">
                            <div class="progress-info">
                                <span>Progress</span>
                                <span>30%</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: 30%"></div>
                            </div>
                        </div>
                        <div class="course-meta">
                            <span><i class="fas fa-clock me-1"></i>8h remaining</span>
                        </div>
                        <div class="course-actions">
                            <button class="btn btn-outline" data-course-id="5">
                                <i class="fas fa-star me-1"></i>Reviews
                            </button>
                            <button class="btn btn-primary" data-course-id="5">
                                <i class="fas fa-play me-1"></i>Continue
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Assessment Progress Tab -->
        <section id="assessments" class="tab-content">
            <div class="section-card">
                <div class="assessment-overview">
                    <div class="overview-stats">
                        <div class="stat-card">
                            <div class="stat-value">85%</div>
                            <div class="stat-label">Average Score</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value">18/25</div>
                            <div class="stat-label">Completed</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value">7</div>
                            <div class="stat-label">In Progress</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Assessments in Progress -->
            <div class="section-card">
                <div class="section-header">
                    <h2>Assessments in Progress</h2>
                    <p class="section-description">Continue working on these assessments</p>
                </div>
                <div class="assessments-list">
                    <!-- Assessment items would go here -->
                    <div class="empty-state">
                        <i class="fas fa-clipboard-list text-gray-300 text-4xl mb-3"></i>
                        <h3>No assessments in progress</h3>
                        <p>Start a new assessment to see it here</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Study Groups Tab -->
        <section id="groups" class="tab-content">
            <div class="section-card">
                <div class="section-header">
                    <h2>Study Groups</h2>
                    <p class="section-description">Join groups and collaborate with peers</p>
                </div>
                <div class="groups-grid">
                    <!-- Group cards would go here -->
                    <div class="empty-state">
                        <i class="fas fa-users text-gray-300 text-4xl mb-3"></i>
                        <h3>No study groups yet</h3>
                        <p>Join a study group to start collaborating</p>
                        <button class="btn btn-primary mt-3">
                            <i class="fas fa-search me-2"></i>Find Groups
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Peer Learning Tab -->
        <section id="peer" class="tab-content">
            <div class="section-card">
                <div class="section-header">
                    <h2>Peer Learning Activities</h2>
                    <p class="section-description">Connect and learn with fellow students</p>
                </div>
                <div class="peer-activities">
                    <!-- Activity items would go here -->
                    <div class="empty-state">
                        <i class="fas fa-handshake text-gray-300 text-4xl mb-3"></i>
                        <h3>No peer activities</h3>
                        <p>Start connecting with peers to see activities here</p>
                        <button class="btn btn-primary mt-3">
                            <i class="fas fa-user-plus me-2"></i>Find Peers
                        </button>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>

@section Scripts {
    <script src="~/js/studentportal.js" asp-append-version="true"></script>
}
