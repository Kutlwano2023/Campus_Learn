@{
    ViewData["Title"] = "Schedule Session";
    Layout = "_Layout";
}

<partial name="_PortalNavigation" />
<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1>Schedule Session</h1>

            @if (ViewBag.Role == "Tutor")
            {
                <div class="alert alert-info">
                    <h4>Tutor Scheduling</h4>
                    <p>Manage your availability and schedule tutoring sessions with students.</p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5>Set Availability</h5>
                            </div>
                            <div class="card-body">
                                <p>Define your available time slots for tutoring sessions.</p>
                                <a href="#" class="btn btn-primary">Manage Availability</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5>Session Requests</h5>
                            </div>
                            <div class="card-body">
                                <p>Review and confirm session requests from students.</p>
                                <a href="#" class="btn btn-success">View Requests</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h4>Student Session Booking</h4>
                    <p>Schedule tutoring sessions with available tutors.</p>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3>Available Tutors</h3>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">Dr. Sarah Johnson</h5>
                                    <span class="badge bg-success">Available</span>
                                </div>
                                <p class="mb-1">Mathematics • 5 years experience</p>
                                <small>Specializes in Calculus and Algebra</small>
                                <div class="mt-2">
                                    <button class="btn btn-sm btn-primary">Book Session</button>
                                </div>
                            </div>
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">Prof. Michael Chen</h5>
                                    <span class="badge bg-warning">Limited Availability</span>
                                </div>
                                <p class="mb-1">Physics • 8 years experience</p>
                                <small>Specializes in Mechanics and Quantum Physics</small>
                                <div class="mt-2">
                                    <button class="btn btn-sm btn-primary">Book Session</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="mt-3">
                <a asp-controller="Portal" asp-action="Dashboard" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>