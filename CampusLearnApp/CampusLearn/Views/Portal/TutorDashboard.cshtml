@{
    ViewData["Title"] = "Tutor Dashboard";
    Layout = "_Layout";
}

<partial name="_PortalNavigation" />
<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1>Welcome to Your Tutor Dashboard</h1>
            <div class="alert alert-info">
                <h4>Hello, @ViewBag.UserName!</h4>
                <p>You are logged in as a <strong>@ViewBag.Role</strong></p>
            </div>

            <!-- Quick Stats -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <h5 class="card-title">Active Students</h5>
                            <p class="card-text display-6">15</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <h5 class="card-title">Sessions This Week</h5>
                            <p class="card-text display-6">8</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-warning">
                        <div class="card-body">
                            <h5 class="card-title">Assignments to Grade</h5>
                            <p class="card-text display-6">5</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-info">
                        <div class="card-body">
                            <h5 class="card-title">Forum Questions</h5>
                            <p class="card-text display-6">12</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h3>Today's Schedule</h3>
                            <a asp-controller="Portal" asp-action="ScheduleSession" class="btn btn-sm btn-outline-primary">Manage Schedule</a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Time</th>
                                            <th>Student</th>
                                            <th>Subject</th>
                                            <th>Type</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>10:00 AM</td>
                                            <td>Emily Johnson</td>
                                            <td>Mathematics</td>
                                            <td>One-on-One</td>
                                            <td><span class="badge bg-success">Confirmed</span></td>
                                        </tr>
                                        <tr>
                                            <td>2:00 PM</td>
                                            <td>Group Session</td>
                                            <td>Physics</td>
                                            <td>Group</td>
                                            <td><span class="badge bg-success">Confirmed</span></td>
                                        </tr>
                                        <tr>
                                            <td>4:30 PM</td>
                                            <td>Michael Brown</td>
                                            <td>Chemistry</td>
                                            <td>One-on-One</td>
                                            <td><span class="badge bg-warning">Pending</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Student Performance -->
                    <div class="card mt-4">
                        <div class="card-header">
                            <h3>Student Performance Overview</h3>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Student</th>
                                            <th>Recent Quiz</th>
                                            <th>Score</th>
                                            <th>Progress</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Sarah Wilson</td>
                                            <td>Algebra Basics</td>
                                            <td>92%</td>
                                            <td>
                                                <div class="progress">
                                                    <div class="progress-bar bg-success" style="width: 92%"></div>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>David Lee</td>
                                            <td>Physics Mechanics</td>
                                            <td>78%</td>
                                            <td>
                                                <div class="progress">
                                                    <div class="progress-bar bg-warning" style="width: 78%"></div>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Jessica Martinez</td>
                                            <td>Chemical Reactions</td>
                                            <td>85%</td>
                                            <td>
                                                <div class="progress">
                                                    <div class="progress-bar bg-info" style="width: 85%"></div>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h3>Tutor Quick Actions</h3>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-controller="Portal" asp-action="StudentPortal" class="btn btn-outline-primary mb-2">
                                    <i class="fas fa-user-graduate me-1"></i>Student Portal
                                </a>
                                <a asp-controller="Portal" asp-action="ScheduleSession" class="btn btn-outline-success mb-2">
                                    <i class="fas fa-calendar-alt me-1"></i>Manage Schedule
                                </a>
                                <a asp-controller="Portal" asp-action="QuizPortal" class="btn btn-outline-info mb-2">
                                    <i class="fas fa-puzzle-piece me-1"></i>Create Quiz
                                </a>
                                <a asp-controller="Portal" asp-action="Tests" class="btn btn-outline-warning mb-2">
                                    <i class="fas fa-file-signature me-1"></i>Manage Tests
                                </a>
                                <a asp-controller="Portal" asp-action="Assignments" class="btn btn-outline-secondary mb-2">
                                    <i class="fas fa-tasks me-1"></i>Grade Assignments
                                </a>
                                <a asp-controller="Portal" asp-action="Forum" class="btn btn-outline-dark">
                                    <i class="fas fa-comments me-1"></i>Monitor Forum
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Pending Actions -->
                    <div class="card mt-3">
                        <div class="card-header">
                            <h3>Pending Actions</h3>
                        </div>
                        <div class="card-body">
                            <div class="list-group list-group-flush">
                                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <span>
                                        <i class="fas fa-puzzle-piece text-warning me-2"></i>
                                        Grade Math Quizzes
                                    </span>
                                    <span class="badge bg-warning rounded-pill">5</span>
                                </a>
                                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <span>
                                        <i class="fas fa-tasks text-info me-2"></i>
                                        Review Assignments
                                    </span>
                                    <span class="badge bg-info rounded-pill">3</span>
                                </a>
                                <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <span>
                                        <i class="fas fa-comments text-success me-2"></i>
                                        Forum Questions
                                    </span>
                                    <span class="badge bg-success rounded-pill">8</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>