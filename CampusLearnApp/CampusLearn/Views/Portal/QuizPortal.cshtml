@{
    ViewData["Title"] = "Quiz Portal";
    Layout = "_Layout";
}

<partial name="_PortalNavigation" />
<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1>Quiz Portal</h1>

            @if (ViewBag.Role == "Tutor")
            {
                <div class="alert alert-info">
                    <h4>Tutor Quiz Management</h4>
                    <p>Create, manage, and analyze quizzes for your students.</p>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-plus fa-3x text-primary mb-3"></i>
                                <h5>Create Quiz</h5>
                                <a href="#" class="btn btn-primary">New Quiz</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-list fa-3x text-success mb-3"></i>
                                <h5>Manage Quizzes</h5>
                                <a href="#" class="btn btn-success">View All</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-chart-pie fa-3x text-info mb-3"></i>
                                <h5>Quiz Analytics</h5>
                                <a href="#" class="btn btn-info">View Reports</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <p>Take quizzes and view your quiz results here.</p>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3>Available Quizzes</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Quiz Name</th>
                                        <th>Subject</th>
                                        <th>Time Limit</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>JavaScript Basics</td>
                                        <td>Computer Science</td>
                                        <td>30 minutes</td>
                                        <td><span class="badge bg-success">Available</span></td>
                                        <td><a href="#" class="btn btn-sm btn-primary">Start Quiz</a></td>
                                    </tr>
                                    <tr>
                                        <td>Algebra Fundamentals</td>
                                        <td>Mathematics</td>
                                        <td>45 minutes</td>
                                        <td><span class="badge bg-warning">In Progress</span></td>
                                        <td><a href="#" class="btn btn-sm btn-warning">Continue</a></td>
                                    </tr>
                                    <tr>
                                        <td>Physics Concepts</td>
                                        <td>Physics</td>
                                        <td>60 minutes</td>
                                        <td><span class="badge bg-secondary">Completed</span></td>
                                        <td><a href="#" class="btn btn-sm btn-outline-secondary">View Results</a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <div class="mt-3">
                <a asp-controller="Portal" asp-action="Dashboard" class="btn btn-outline-primary">Back to Dashboard</a>
            </div>
        </div>
    </div>
</div>