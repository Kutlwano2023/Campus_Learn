@{
    ViewData["Title"] = "Assignments";
    Layout = "_Layout";
}

<partial name="_PortalNavigation" />
<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1>Assignments</h1>

            @if (ViewBag.Role == "Tutor")
            {
                <div class="alert alert-info">
                    <h4>Tutor Assignment Management</h4>
                    <p>Create, manage, and grade assignments for your students.</p>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-plus-circle fa-3x text-primary mb-3"></i>
                                <h5>Create Assignment</h5>
                                <a href="#" class="btn btn-primary">New Assignment</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                                <h5>Grade Submissions</h5>
                                <a href="#" class="btn btn-success">View Submissions</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-chart-bar fa-3x text-info mb-3"></i>
                                <h5>View Analytics</h5>
                                <a href="#" class="btn btn-info">Performance Reports</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h4>Student Assignments</h4>
                    <p>View and submit your course assignments.</p>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3>My Assignments</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Course</th>
                                        <th>Assignment</th>
                                        <th>Due Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Mathematics</td>
                                        <td>Calculus Problem Set</td>
                                        <td>Dec 15, 2024</td>
                                        <td><span class="badge bg-warning">Pending</span></td>
                                        <td><a href="#" class="btn btn-sm btn-primary">Submit</a></td>
                                    </tr>
                                    <tr>
                                        <td>Physics</td>
                                        <td>Lab Report</td>
                                        <td>Dec 12, 2024</td>
                                        <td><span class="badge bg-success">Submitted</span></td>
                                        <td><a href="#" class="btn btn-sm btn-outline-secondary">View</a></td>
                                    </tr>
                                    <tr>
                                        <td>Computer Science</td>
                                        <td>Programming Project</td>
                                        <td>Dec 20, 2024</td>
                                        <td><span class="badge bg-info">In Progress</span></td>
                                        <td><a href="#" class="btn btn-sm btn-primary">Continue</a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <div class="mt-3">
                <a asp-controller="Portal" asp-action="Dashboard" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>