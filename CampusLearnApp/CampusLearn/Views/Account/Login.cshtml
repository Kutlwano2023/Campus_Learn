@{
    Layout = null;
    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Login"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
</head>
<body>
    <div class="login-card">
        <div class="logo text-center">
            <img src="~/images/logo.png" alt="Campus Learn Logo" />
            <div>
                <h3>Campus Learn</h3>
                <p>Your Learning Portal</p>
            </div>
        </div>

        <div class="toggle-buttons">
            <button id="loginBtn" class="active">Login</button>
            <button id="registerBtn">Register</button>
        </div>

        <!-- LOGIN FORM -->
        <form id="loginForm" asp-controller="Dashboard" asp-action="Index" method="get">
            <h5 class="text-center">Welcome Back</h5>
            <p class="text-center text-muted mb-3">Sign in to your account</p>

            <label>Email Address</label>
            <input type="email" class="form-control" placeholder="student@campus.edu" required>

            <label>Password</label>
            <input type="password" class="form-control" placeholder="••••••••" required>

           

            <button type="submit" class="btn btn-login mt-3">Login</button>
        </form>

        <!-- REGISTER FORM -->
        <form id="registerForm" asp-controller="Auth" asp-action="Register" method="post" style="display:none;">
            <h5 class="text-center">Create an Account</h5>
            <p class="text-center text-muted mb-3">Join Campus Learn today</p>

            <label>Full Name</label>
            <input type="text" class="form-control" placeholder="John Doe" required>

            <label>Email Address</label>
            <input type="email" class="form-control" placeholder="you@campus.edu" required>

            <label>Password</label>
            <input type="password" class="form-control" placeholder="••••••••" required>

            <label>Confirm Password</label>
            <input type="password" class="form-control" placeholder="••••••••" required>

            <label class="mt-3">Select Role</label>
            <select class="form-select role-select">
                <option selected>Student</option>
                <option>Tutor</option>
            </select>

            <button type="submit" class="btn btn-login mt-3">Register</button>
        </form>
    </div>

    <script>
        const loginBtn = document.getElementById("loginBtn");
        const registerBtn = document.getElementById("registerBtn");
        const loginForm = document.getElementById("loginForm");
        const registerForm = document.getElementById("registerForm");

        loginBtn.addEventListener("click", () => {
            loginForm.style.display = "block";
            registerForm.style.display = "none";
            loginBtn.classList.add("active");
            registerBtn.classList.remove("active");
        });

        registerBtn.addEventListener("click", () => {
            loginForm.style.display = "none";
            registerForm.style.display = "block";
            registerBtn.classList.add("active");
            loginBtn.classList.remove("active");
        });
    </script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
