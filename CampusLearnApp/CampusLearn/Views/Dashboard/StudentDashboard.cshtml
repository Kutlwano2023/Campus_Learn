@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Welcome to Your Student Dashboard</h1>
            <div class="alert alert-success">
                <h4>Hello, @ViewBag.UserName!</h4>
                <p>You are logged in as a <strong>@ViewBag.Role</strong></p>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>Student Features</h3>
                </div>
                <div class="card-body">
                    <ul>
                        <li>View available tutors</li>
                        <li>Schedule tutoring sessions</li>
                        <li>Access learning materials</li>
                        <li>Track your progress</li>
                    </ul>
                </div>
            </div>

            <div class="mt-3">
                <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Logout</a>
            </div>
        </div>
    </div>
</div>