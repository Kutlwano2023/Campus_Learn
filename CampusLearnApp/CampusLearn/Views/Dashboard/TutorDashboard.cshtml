@{
    ViewData["Title"] = "Tutor Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Welcome to Your Tutor Dashboard</h1>
            <div class="alert alert-info">
                <h4>Hello, @ViewBag.UserName!</h4>
                <p>You are logged in as a <strong>@ViewBag.Role</strong></p>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>Tutor Features</h3>
                </div>
                <div class="card-body">
                    <ul>
                        <li>Manage your availability</li>
                        <li>View student requests</li>
                        <li>Schedule sessions</li>
                        <li>Track earnings</li>
                        <li>Upload teaching materials</li>
                    </ul>
                </div>
            </div>

            <div class="mt-3">
                <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Logout</a>
            </div>
        </div>
    </div>
</div>